# Top-level EditorConfig: keep formatting consistent across machines
root = true

[*]
charset = utf-8
end_of_line = lf        # use Unix LF newlines everywhere
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{cs,csproj}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2
